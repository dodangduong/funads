<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/background_banner"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="47dp">
        <ImageView
            android:background="@drawable/background_icon"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/banner_imageView"
            android:layout_width="34dp"
            android:layout_height="34dp"/>
        <TextView
            android:id="@+id/banner_tv_title"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/banner_imageView"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toLeftOf="@id/banner_button_download"
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/banner_tv_content"
            android:layout_below="@+id/banner_tv_title"
            android:textSize="11sp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#E5E5EA"
            android:layout_toRightOf="@+id/banner_imageView"
            android:layout_toLeftOf="@id/banner_button_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:background="@drawable/buttondownload"
            android:id="@+id/banner_button_download"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/btn_close"
            android:layout_width="106dp"
            android:layout_height="30dp"/>
        <Button
            android:id="@+id/btn_close"
            android:background="@drawable/closepopup"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
    </RelativeLayout>
</RelativeLayout>
