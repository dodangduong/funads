<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_banner_view"
    android:padding="7dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/image_small_content"
            app:srcCompat="@drawable/popupsmallimage"
            android:layout_width="34dp"
            android:layout_height="34dp"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_toRightOf="@+id/image_small_content"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="15sp"
            android:fontFamily="@font/sfprodisplaybold"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_download"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_toRightOf="@+id/image_small_content"
            android:layout_below="@+id/tv_title"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/sfprodisplaysemibold"
            android:textSize="11sp"
            android:layout_marginLeft="8dp"
            android:textColor="#E5E5EA"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:background="@drawable/buttondownload"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_download"
            android:layout_centerVertical="true"
            android:layout_width="106dp"
            android:layout_height="30dp"/>
</RelativeLayout>